<odoo>
  <data>
    <record id="view_activity_form" model="ir.ui.view">
      <field name="name">project.activity.form</field>
      <field name="model">op.project.activity</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="op_project_id" />
                <field name="op_user_id" />
                <field name="op_activity_id" />
                <field name="default_rate" />
                <field name="currency_id" />
              </group>
              <group>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_activity_tree" model="ir.ui.view">
      <field name="name">project.activity.tree</field>
      <field name="model">op.project.activity</field>
      <field name="arch" type="xml">
        <tree>
          <field name="op_project_id" />
          <field name="op_user_id" />
          <field name="op_activity_id" />
          <field name="default_rate" />
          <field name="currency_id" />
        </tree>
      </field>
    </record>

    <record id="project_activity_action" model="ir.actions.act_window">
      <field name="name">project.activity</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">op.project.activity</field>
      <field name="view_mode">tree,kanban,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Hello
      </p>
      </field>
    </record>
    <menuitem name="project.activity" id="project_activity_menu_root" sequence="25" action="project_activity_action" />

