<odoo>
    <data>
        <!--<record id="sync_wizard_action" name="Sync" res_model="sync.wizard" view_mode="form" target="new"/>-->
        <record id="sync_wizard_action" model="ir.actions.act_window">
            <field name="name">Sync.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sync.wizard</field>
            <field name="view_mode">form</field>
          </record>
        <record id="sync_wizard_view" model="ir.ui.view">
            <field name="name">Sync View</field>
            <field name="model">sync.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <footer>
                        <button name="btn_sync" string="Sync" class="oe_right oe_highlight" type="object"/>
                        <button string="Cancel" class="oe_right" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <menuitem name="sync_wizard" id="sync_wizard_menu_root" sequence="20" action="sync_wizard_action" />
    </data>
</odoo>